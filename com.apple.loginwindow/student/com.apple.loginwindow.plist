<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  The Loginwindow payload is designated by specifying com.apple.loginwindow as the PayloadType value.
  This payload creates managed preferences on all versions of macOS for system and device profiles. Multiple Loginwindow payloads may be installed together.
  In addition to the settings common to all payloads, this payload defines these keys:
-->
<plist version="1.0">
  <dict>
    <key>AdminMayDisableMCX</key>
      <!--
        boolean
        No official documentation available.
      -->
    <true/>
    <key>AdminHostInfo</key>
      <!--
        string
        If this key is included in the payload, its value is displayed in the login window as additional computer information. Before macOS 10.10, this string could contain only certain information (host name, system version, or IP address). After macOS 10.10, setting this key to any value allows the user to click the time area of the menu bar to toggle through various computer information values.
        Possible values: HostName, SystemVersion, IPAddress
      -->
    <string>HostName</string>
    <!--
    <string>AllowList</string>
      <
        string
        The list of user GUIDs or group GUIDs of users that are allowed to log in. An asterisk '*' string specifies all users or groups.
      >
    <string></string>
    -->
    <!--
    <key>AlwaysShowWorkgroupDialog</key>
      <
        boolean
        No official documentation available.
      >
    <false/>
    -->
    <key>com.apple.login.mcx.DisableAutoLoginClient</key>
      <!--
        boolean
        No official documentation available.
      -->
    <true/>
    <!--
    <key>CombineUserWorkgroups</key>
      <
        boolean
        No official documentation available.
      >
    <false/>
    -->
    <!--
    <string>DenyList</string>
      <
        string
        The list of user GUIDs or group GUIDs of users that cannot log in. This list takes priority over the list in the AllowList key.
      >
    <string></string>
    -->
    <key>DisableConsoleAccess</key>
      <!--
        boolean
        If true, disregards the >console special user name, which will provide a command line UI.
        Default: false
      -->
    <true/>
    <key>DisableFDEAutoLogin</key>
      <!--
        boolean
        No official documentation available.
      -->
    <true/>
    <key>DisableScreenLockImmediate</key>
      <!--
        boolean
        If true, disables the immediate Screen Lock functions.
        Default: false
      -->
    <false/>
    <key>EnableExternalAccounts</key>
      <!--
        boolean
        No official documentation available.
      -->
    <false/>
    <!--
    <key>FlattenUserWorkgroups</key>
      <
        boolean
        No official documentation available.
      >
    <false/>
    -->
    <key>HideAdminUsers</key>
      <!--
        boolean
        If true, hides administrator users when showing a user list.
        Default: false
      -->
    <true/>
    <key>HideLocalUsers</key>
      <!--
        boolean
        If true, shows only network and system users when showing a user list.
        Default: false
      -->
    <false/>
    <key>HideMobileAccounts</key>
      <!--
        boolean
        If true, hides mobile account users in a user list. In some cases, mobile users show up as network users.
        Default: false
      -->
    <true/>
    <key>IncludeNetworkUser</key>
      <!--
        boolean
        If true, shows network users when showing a user list.
        Default: false
      -->
    <false/>
    <!--
    <key>LocalUserLoginEnabled</key>
      <!
        boolean
        No official documentation available.
      >
    <true/>
    -->
    <!--
    <key>LocalUsersHaveWorkgroups</key>
      <
        boolean
        No official documentation available.
      >
    <false/>
    -->
    <key>LoginwindowText</key>
      <!--
        string
        The text to display in the login window.
      -->
    <string>Property of Vermilion Local Schools. By logging in you are agreeing to the acceptable use policy.</string>
    <key>LogOutDisabledWhileLoggedIn</key>
      <!--
        boolean
        If true, disables the Log Out menu item when the user is logged in.
        Default: false
      -->
    <false/>
    <key>PowerOffDisabledWhileLoggedIn</key>
      <!--
        boolean
        If true, disables the Power Off menu item when the user is logged in.
        Default: false
      -->
    <false/>
    <key>RestartDisabled</key>
      <!--
        boolean
        If true, disables the Restart item.
        Default: false
      -->
    <false/>
    <key>RestartDisabledWhileLoggedIn</key>
      <!--
        boolean
        If true, disables the Restart menu item when the user is logged in.
        Default: false
      -->
    <false/>
    <!--
    <key>RetriesUntilHint</key>
      <
        integer
        No official documentation available.
      >
    <integer>3</integer>
    -->
    <key>SHOWFULLNAME</key>
      <!--
        boolean
        If true, shows the name and password dialog; if false, displays a list of users.
        Default: false
      -->
    <true/>
    <!--
    <key>SHOWOTHERUSERS_MANAGED</key>
      <!
        boolean
        If true, displays Other... when showing a list of users.
        Default: false
      >
    <false/>
    -->
    <key>ShutDownDisabled</key>
      <!--
        boolean
        If true, disables the Shut Down button.
        Default: false
      -->
    <false/>
    <key>ShutDownDisabledWhileLoggedIn</key>
      <!--
        boolean
        If true, disables the Shut Down menu item when the user is logged in.
        Default: false
      -->
    <false/>
    <key>SleepDisabled</key>
      <!--
        boolean
        If true, disables the Sleep button.
        Default: false
      -->
    <false/>
    <!--
    <key>showInputMenu</key>
      <!
        boolean
        Default: false
      >
    <false/>
    -->
    <!--
    <key>UseComputerNameForComputerRecordName</key>
      <!
        boolean
        No official documentation available.
      >
    <false/>
    -->
  </dict>
</plist>
